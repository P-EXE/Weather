<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WeatherApp.ViewModels"
             x:Class="WeatherApp.Views.LoginPage"
             x:DataType="viewmodels:LoginVM">
	<ContentPage.Content>
		<VerticalStackLayout
			Margin="10"
			Spacing="10">
			<Entry Placeholder="Email"
			       Text="" />
			<Entry Placeholder="Password"
			       Text=""
			       IsPassword="True" />
			<Button Text="Log in" Command="{Binding LoginEmailCommand}"/>
			<Button Text="Google" Command="{Binding LoginGoogleCommand}"/>
		</VerticalStackLayout>
	</ContentPage.Content>
</ContentPage>